                <pagecontrol>60</pagecontrol>
                <viewtype label="536">list</viewtype>
                <scrolltime tween="quadratic">400</scrolltime>
                <itemlayout height="337" width="222">
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <right>0</right>
                        <bottom>12</bottom>
                        <texture border="10">common/nofocus-shadow10.png</texture>
                    </control>
                    <control type="image">
                        <left>10</left>
                        <top>10</top>
                        <right>10</right>
                        <bottom>22</bottom>
                        <aspectratio scalediffuse="false">scale</aspectratio>
                        <texture diffuse="diffuse/wall.png" background="true">$VAR[PosterImage]</texture>
                    </control>
                    <control type="image">
                        <centerright>32</centerright>
                        <centertop>32</centertop>
                        <width>32</width>
                        <height>32</height>
                        <aspectratio aligny="top">keep</aspectratio>
                        <texture colordiffuse="$VAR[ColorHighlight]">$VAR[PosterPercentWatchedBacking]</texture>
                        
                        <visible>!stringcompare(ListItem.Label,..)</visible>
                    </control>
                    <control type="image">
                        <centerright>32</centerright>
                        <centertop>32</centertop>
                        <width>32</width>
                        <height>32</height>
                        <aspectratio aligny="top">keep</aspectratio>
                        <texture>$VAR[PosterPercentWatched]</texture>
                        <visible>!stringcompare(ListItem.Label,..)</visible>
                        
                    </control>
                </itemlayout>
                <focusedlayout height="337" width="222">
                    <!-- Left Poster Info -->
                    <control type="group">
                        <posx>0</posx>  
                        <posy>0</posy>
                        <visible>Skin.HasSetting(55wall.showinfo)</visible>
                        <visible>Container(55).Column(0) | Container(55).Column(1) | Container(55).Column(2) | Container(55).Column(3)</visible>                       
                        <animation effect="fade" start="0" end="0" delay="0" time="50" reversible="false">UnFocus</animation>
                        <animation effect="fade" start="0" end="0" delay="0" time="50" reversible="false">Hidden</animation>
                        <control type="image">
                            <visible>Control.HasFocus(55)</visible>
                            <posx>10</posx>
                            <posy>10</posy>
                            <width>870</width>
                            <height>305</height>
                            <texture colordiffuse="White100" border="5">common/box.png</texture>
                            <animation type="Focus">
                                <effect type="zoom" start="10,0,202,305" end="10,0,868,305" delay="1200" time="300" reversible="false" />
                                <effect type="fade" start="0" end="100" delay="200" time="150" tween="sine" easing="in" />
                            </animation>
                        </control>
                        <include>View_55_Info_Left</include>
                    </control>
                    <!-- Right Poster Info -->
                    <control type="group">
                        <posx>-668</posx>   
                        <posy>0</posy>
                        <visible>Skin.HasSetting(55wall.showinfo)</visible>
                        <visible>Container(55).Column(4) | Container(55).Column(5) | Container(55).Column(6) | Container(55).Column(7)</visible>
                        <animation effect="fade" start="0" end="0" delay="0" time="50" reversible="false">UnFocus</animation>
                        <animation effect="fade" start="0" end="0" delay="0" time="50" reversible="false">Hidden</animation>
                        <control type="image">
                            <posx>10</posx>
                            <posy>10</posy>
                            <width>870</width>
                            <height>305</height>
                            <texture colordiffuse="White100" border="5">common/box.png</texture>
                            <animation type="Focus">
                                <effect type="zoom" start="675,0,202,305" end="0,0,868,305" delay="1200" time="300" reversible="false" />
                                <effect type="fade" start="0" end="100" delay="200" time="150" tween="sine" easing="in" />
                            </animation>
                        </control>
                        <include>View_55_Info_Right</include>
                    </control>

                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <right>0</right>
                        <bottom>12</bottom>
                        <texture border="10">common/nofocus-shadow10.png</texture>
                    </control>
                    <control type="image">
                        <left>10</left>
                        <top>10</top>
                        <right>10</right>
                        <bottom>22</bottom>
                        <aspectratio scalediffuse="false">scale</aspectratio>
                        <texture diffuse="diffuse/wall.png" background="true">$VAR[PosterImage]</texture>
                    </control>
                    <control type="image">
                        <centerright>32</centerright>
                        <centertop>32</centertop>
                        <width>32</width>
                        <height>32</height>
                        <aspectratio aligny="top">keep</aspectratio>
                        <texture colordiffuse="$VAR[ColorHighlight]">$VAR[PosterPercentWatchedBacking]</texture>
                        
