                    </control>
                    <control type="textbox">
                        <top>117</top>
                        <bottom>0</bottom>
                        <align>left</align>
                        <font>Tiny</font>
                        <textcolor>White70</textcolor>
                        <selectedcolor>White70</selectedcolor>
                        <label>$VAR[LabelPlotBox]</label>
                    </control>
                </control>
            
            </control>
            
        </control>
        
    </include>

</includes>
